.icons >>> .swiper-container
  overflow: hidden
  padding-bottom: 50%
  height: 0
.icons
  margin-top: .1rem
  .icon
    float: left
    position: relative
    // 固定宽高比
    overflow: hidden
    width: 25%
    height: 0
    padding-bottom: 25%
    .icon-img
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: .44rem
      box-sizing: border-box
      padding: .1rem
      .icon-img-content
        display: block
        margin: 0 auto // 居中
        height: 100%
    .icon-desc
      position: absolute
      // <-- 相当于 width: 100%
      left: 0
      right: 0
      // -->
      bottom: 0
      // <-- 垂直居中
      height: .44rem
      line-height: .44rem
      // -->
      text-align: center // 文字水平居中
      color: $darkTextColor
      ellipsis()
